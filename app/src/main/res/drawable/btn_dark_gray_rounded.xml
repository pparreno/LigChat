<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/btn_radius" />
            <solid android:color="@color/button_gray" />

            <padding
                android:bottom="@dimen/btn_padding"
                android:left="@dimen/btn_padding"
                android:right="@dimen/btn_padding"
                android:top="@dimen/btn_padding" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/btn_radius" />
            <solid android:color="@color/button_gray_pressed" />
            <padding
                android:bottom="@dimen/btn_padding"
                android:left="@dimen/btn_padding"
                android:right="@dimen/btn_padding"
                android:top="@dimen/btn_padding" />
        </shape>
    </item>
</selector>